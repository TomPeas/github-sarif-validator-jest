{
  "name": "github-sarif-validator-jest",
  "version": "0.0.0-alpha.1",
  "description": "A Jest package that allows you to validate a Sarif output is compatible for Github Code scanning",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle  --sourcemap --platform=node --target=node20 --format=esm --outfile=dist/index.js",
    "prepare": "husky",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TomPeas/github-sarif-validator.git"
  },
  "keywords": [
    "jest",
    "jest-matcher",
    "sarif",
    "jest sarif"
  ],
  "author": "TomPeas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TomPeas/github-sarif-validator/issues"
  },
  "homepage": "https://github.com/TomPeas/github-sarif-validator#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.3",
    "@types/sarif": "^2.1.7",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.7.7",
    "husky": "^9.1.6"
  }
}
